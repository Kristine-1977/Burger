<div class="jumbotron">
    <h1 class="text-center">Hamburgers for everyone!</h1>
</div>
<div class="container w-75 pb-4" id="large_container">
    {{!-- <h1 class="display-4 text-center bg-dark text-white px-0 py-3">Hamburgers for everyone!/h1> --}}


        <img src="http://clipground.com/images/beefburger-clipart-4.jpg" alt="" class="center">


        <div class="row ">
            <div class="col-6 ">
                <h2 class="pl-4 ">Available hamburgers!</h2>

                <ul class="">
                    {{#each hamburgers}}
                    {{#unless this.devoured}}
                    <li class=" mb-1">
                        <p class="btn btn-outline-secondary">
                            {{this.id}}. {{this.hamburger_name}}
                            <button class="btn btn-success btn-sm pl-3 devour_it" data-id="{{this.id}}">Devour
                                It</button>
                        </p>
                    </li>

                    {{/unless}}

                    {{/each}}
                </ul>
            </div>
            <div class="col-6 ">
                <h2 class="text-muted">Eaten Hamburgers</h2>
                <ul class="">
                    {{#each hamburgers}}
                    {{#if this.devoured}}
                    <div>
                        <button class="btn btn-outline-secondary btn-sm disabled mb-1">
                            {{!-- <p class=""> --}}
                                {{this.id}}. {{this.hamburger_name}}
                                {{!-- </p> --}}
                        </button>
                    </div>

                    {{/if}}

                    {{/each}}
                </ul>
            </div>
        </div>
        <hr class="my-4">
        <div class="container text-center">
            {{!-- <h2>Add A Burger</h2> --}}
            <form class="create-form">

                {{!-- <div class="form-group"> --}}
                    {{!-- <label for="hamburger">hamburger Name:</label> --}}
                    <textarea type="textarea" id="hamburger" name="name" placeholder="add a hamburger here"></textarea>
                    {{!--
                </div> --}}

                <p>
                    <button class="btn btn-success " type="submit">Add Hamburger</button>
                </p>
                <p>Enter the hamburger you want to eat and press enter</p>
            </form>
        </div>
</div>